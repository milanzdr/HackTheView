<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgNodeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        app:srcCompat="@drawable/ic_peak" />

    <TextView
        android:id="@+id/txtNodeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="TextView"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgNodeType"
        app:layout_constraintLeft_toRightOf="@+id/pointerImage"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/dividerLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/txtNodeName" />

    <ImageView
        android:id="@+id/pointerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        app:layout_constraintLeft_toRightOf="@+id/imgNodeType"
        app:srcCompat="@drawable/ic_navigation_center" />

    <TextView
        android:id="@+id/txtPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/dividerLine" />

    <TextView
        android:id="@+id/lblNodeType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Node type"
        app:layout_constraintTop_toBottomOf="@+id/txtPosition"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/txtNodeType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/lblNodeType"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPosition"/>

    <TextView
        android:id="@+id/lblDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Distance"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/lblLocationData"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/txtDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/lblDistance"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblLocationData" />

    <TextView
        android:id="@+id/lblAz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="View azimuth"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/lblDistance"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/txtAz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/lblAz"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDistance" />

    <TextView
        android:id="@+id/lblLon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Longitude"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/lblAz"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/txtLon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/lblLon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAz" />

    <TextView
        android:id="@+id/lblLat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Latitude"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/lblLon"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/txtLat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/lblLat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLon" />

    <TextView
        android:id="@+id/lblLocationData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="Location data "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/lblNodeType" />

</android.support.constraint.ConstraintLayout>